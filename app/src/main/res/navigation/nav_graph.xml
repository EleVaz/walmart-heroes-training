<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_stepper_fragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.wizeline.heroes.Fragment.HeroesFragment"
        tools:layout="@layout/fragment_heroes">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.wizeline.heroes.Fragment.HeroesFragment2"
        tools:layout="@layout/fragment_heroes2">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_stepper_fragment"
        android:name="com.wizeline.heroes.Fragment.StepperFragment"
        android:label="StepperFragment" />
</navigation>
